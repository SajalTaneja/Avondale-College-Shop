    <tbody>
@foreach (var item in Model.Shipment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardChargeTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackingCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipOrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ShipmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ShipmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ShipmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
