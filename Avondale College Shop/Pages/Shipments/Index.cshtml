    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].CardChargeTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].PackingCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].ShipOrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].OrderNumber)
            </th>
            <th></th>
        </tr>
