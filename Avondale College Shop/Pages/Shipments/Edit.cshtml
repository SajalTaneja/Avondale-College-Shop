                <label asp-for="Shipment.CardChargeTime" class="control-label"></label>
                <input asp-for="Shipment.CardChargeTime" class="form-control" />
                <span asp-validation-for="Shipment.CardChargeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipment.PackingCode" class="control-label"></label>
                <input asp-for="Shipment.PackingCode" class="form-control" />
                <span asp-validation-for="Shipment.PackingCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipment.ShipOrderTime" class="control-label"></label>
                <input asp-for="Shipment.ShipOrderTime" class="form-control" />
                <span asp-validation-for="Shipment.ShipOrderTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipment.OrderNumber" class="control-label"></label>
                <input asp-for="Shipment.OrderNumber" class="form-control" />
                <span asp-validation-for="Shipment.OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

