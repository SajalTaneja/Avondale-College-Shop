<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avondale College Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Avondale College Shop.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Avondale College Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index" style="color: black;">Home</a>

                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                Year 9-10

                            </a>

                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="JuniorBoys">Junior Boys</a></li>

                                <li><a class="dropdown-item" aria-currnet="page" asp-controller="Home" asp-action="JuniorGirls">Junior Girls</a></li>
                            </ul>

                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                Year 9-10

                            </a>

                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="Senior_Boys">Senior Boys</a></li>

                                <li><a class="dropdown-item" aria-currnet="page" asp-controller="Home" asp-action="Senior_Girls">Senior Girls</a></li>
                            </ul>

                        </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                            Accessories

                        </a>

                        <ul class="dropdown-menu">

                                <li><a class="dropdown-item" aria-current="page" asp-area="" asp-page="/Index">Blazer and Tie</a></li>

                                <li><a class="dropdown-item" aria-current="page" asp-area="" asp-page="/Index">Socks</a></li>

                            <li><a class="dropdown-item" aria-currenr="page" asp-controller="Home" asp-action="Accessories">Jersey</a></li>

                            <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="Accessories">Jacket</a></li>

                    </li>
                    </ul>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="About" style="color:black">About</a>

                    </li>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""  asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
                <div class="topnav">
                    
                    <input type="text" placeholder="Search..">
                     <button type="submit">Submit</button>
                </div>
                </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Avondale College Shop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>